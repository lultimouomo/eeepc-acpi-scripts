#!/usr/bin/make -f

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

PKG = eeepc-acpi-scripts
TMP = $(CURDIR)/debian/$(PKG)

configure: configure-stamp
configure-stamp:
	dh_testdir
	touch configure-stamp


build: build-stamp

build-stamp: configure-stamp
	dh_testdir
	touch $@

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp configure-stamp
	dh_clean

install: build
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs
	install -m 0755 etc/acpi/actions/* $(TMP)/etc/acpi/actions
	install -m 0644 etc/acpi/events/* $(TMP)/etc/acpi/events
	install -m 0644 etc/acpi/lib/* $(TMP)/etc/acpi/lib
	install -m 0644 etc/modprobe.d/* $(TMP)/etc/modprobe.d
	install -m 0644 functions.sh $(TMP)/usr/share/$(PKG)/

binary-indep: build install
	dh_testdir
	dh_testroot
	dh_installchangelogs
	dh_installdocs
	dh_installinit
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
